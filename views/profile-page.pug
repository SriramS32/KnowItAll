extends layout

block content
  body.no-sidebar
    #page-wrapper
      // Main
      .wrapper.style2
        #main.container
          // Content
          #content
            article.box.post
              header.style1
                h2
                  | #{user.name}
                p #{user.email}
            .row(class='150%')
              if pollVotes && pollVotes.length > 0
                each val in pollVotes
                  div(class='4u 12u(mobile)')
                    section.box
                      header
                        .row
                          h1 #{val.poll.question}
                          h2 Choice: #{val.choice+1}
                          h2 #{val.updatedAt}
                          p 
                            | #{val.owner || 'anon'}
              if ratings && ratings.length > 0
                each val in ratings
                  div(class='4u 12u(mobile)')
                    section.box
                      header
                        .row
                          h1 #{val.entity.name}
                          h2 Rating: #{val.rating}/10
                          h2 #{val.updatedAt}
                          p 
                            | #{val.owner || 'anon'}
    // Scripts
    script(src='js/jquery.min.js')
    script(src='js/jquery.dropotron.min.js')
    script(src='js/skel.min.js')
    script(src='js/skel-viewport.min.js')
    script(src='js/util.js')
    //if lte IE 8
      script(src='js/ie/respond.min.js')
    script(src='js/main.js')